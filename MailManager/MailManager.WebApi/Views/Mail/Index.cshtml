@{
    ViewData["Title"] = "Main";
}

<div
  style="
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 15px;
">
    <div>
        @await Html.PartialAsync("./Forms/Client")
    </div>
    <div>
        @await Html.PartialAsync("./Forms/Notice")
    </div>
</div>

<div class="text-center" style="margin: 20px">
    <h1 style="font-size: 15px">Выполните принудительную отправку писем</h1>
</div>

<div class="text-center">
    <input type="button"
           value="Отправить"
           onclick="location.href='@Url.Action("SendMessages", "Mail")'"/>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}